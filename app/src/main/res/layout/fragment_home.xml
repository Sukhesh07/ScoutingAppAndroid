<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FEDS_WHITE"
    tools:context=".Home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40sp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="500sp"
                android:layout_height="60sp"
                android:src="@drawable/g"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/upcoming_matches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80sp"
                android:textColor="@color/FEDS_BLACK"
                android:textSize="24sp"
                android:fontFamily="@font/faxsansbeta"
                android:text="@string/upcoming_matches"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/divider"
                android:layout_width="300dp"
                android:layout_height="3dp"
                android:background="@color/FEDS_WHITE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/upcoming_matches" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuals"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="495dp"
                app:layout_constraintTop_toBottomOf="@+id/upcoming_matches" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:layout_marginTop="10sp"
                android:src="@drawable/fedslogo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>